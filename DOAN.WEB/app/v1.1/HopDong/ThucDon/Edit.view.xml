<core:View height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" controllerName="app.Software.DevHistory.Edit">
  <Page>
    <customHeader>
      <Toolbar design="Solid">
        <Title text="Cập nhật thông tin lịch sử phát triển của phần mềm" level="H4" />
        <ToolbarSpacer />
        <Button icon="sap-icon://decline" tooltip="Đóng" press="closeArea" />
      </Toolbar>
    </customHeader>
    <content>
      <VBox class="sapUiSmallMargin">
        <f:SimpleForm
          title="{mainModel>/TIEUDE}"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="1"
            singleContainerFullSize="true">
          <f:content>
            <Label text="Ngày bắt đầu" design="Bold" required="true" />
            <Input editable="false" value="{ path: 'mainModel>/NGAYBATDAU', type: 'sap.ui.model.type.DateTime', formatOptions: { source: { pattern: 'yyyy-MM-ddTHH:mm:ss.SSS', UTC: true }, pattern: 'dd/MM/yyyy', UTC: false }}" />
            <Label text="Ngày kết thúc" design="Bold" required="true" />
            <Input editable="false" value="{ path: 'mainModel>/NGAYKETTHUC', type: 'sap.ui.model.type.DateTime', formatOptions: { source: { pattern: 'yyyy-MM-ddTHH:mm:ss.SSS', UTC: true }, pattern: 'dd/MM/yyyy', UTC: false }}" />
            <Label text="Đối tượng thực hiện" design="Bold" required="true" />
            <Input id="doiTuongThucHien" value="{ path: 'mainModel>/DOITUONGTHUCHIEN'}" />
            <Label text="Nội dung" design="Bold" required="true" />
            <TextArea id="noiDung" growing="true" maxLength="500" growingMaxLines="7" width="100%" value="{mainModel>/NOIDUNG}" />
          <Label text="Ghi chú" design="Bold" required="true" />
            <TextArea id="ghiChu" growing="true" maxLength="500" growingMaxLines="7" width="100%" value="{mainModel>/GHICHU}" />
          </f:content>
        </f:SimpleForm>
      </VBox>
    </content>
    <footer>
      <Toolbar active="true">
        <content>
          <ToolbarSpacer />
          <Button text="Hoàn tất" type="Accept" icon="sap-icon://accept" press="save" />
          <Button text="Đặt lại" type="Ghost" icon="sap-icon://reset" press="clearForm" />
          <Button text="Hủy bỏ" type="Reject" icon="sap-icon://cancel" press="onCancel" />
        </content>
      </Toolbar>
    </footer>
  </Page>
</core:View>