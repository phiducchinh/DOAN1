<core:FragmentDefinition
	xmlns="sap.m"
  xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Popover verticalScrolling="true" placement="Bottom" class="sapUiSizeCompact" showHeader="false">
		<content>
			<List id="idListUpdateStatusThanhToan" mode="SingleSelectMaster">
				<StandardListItem title="Chưa thanh toán">
					<customData>
						<core:CustomData key="Status" value="0" />
					</customData>
				</StandardListItem>
				<StandardListItem title="Đã thah toán">
					<customData>
						<core:CustomData key="Status" value="1"></core:CustomData>
					</customData>
				</StandardListItem>
				<StandardListItem title="Đang nợ">
					<customData>
						<core:CustomData key="Status" value="2"></core:CustomData>
					</customData>
				</StandardListItem>
			</List>
		</content>
		<footer>
			<Toolbar>
				<Button type="Emphasized" press="btnUpdateStatusThanhToans" text="Áp dụng" />
			</Toolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>